{
  "manifest_version": 3,
  "name": "QuickTOC",
  "description": "Generate a draggable table of contents for web pages",
  "version": "1.2",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "web_accessible_resources": [{
    "resources": ["i18n.js"],
    "matches": ["<all_urls>"]
  }]
} 